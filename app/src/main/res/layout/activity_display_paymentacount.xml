<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:translationX="0">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="79dp"
        app:cardBackgroundColor="#6d0095"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textPaymentAct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:fontFamily="@font/roboto_medium"
            android:text="Payment Accounts"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            android:translationX="10"
            android:translationY="10" />

        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="71dp"
            android:layout_height="65dp"
            android:translationX="325"
            android:translationY="5"
            app:srcCompat="@drawable/teamlogo" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="400dp"
        android:layout_height="70dp"
        app:cardBackgroundColor="#DDDDDD"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="158dp">

        <TextView
            android:id="@+id/textName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:translationX="15"
            android:translationY="10" />

        <TextView
            android:id="@+id/textAccountNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AccountNumber"
            android:translationX="110"
            android:translationY="10" />

        <TextView
            android:id="@+id/textSortCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SortCode"
            android:translationX="280"
            android:translationY="10" />

        <Button
            android:id="@+id/btnSelect"
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:text="Select"
            android:textSize="10sp"
            android:translationX="10"
            android:translationY="35"
            app:backgroundTint="#6d0095" />

    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/textChoosePaymentAct"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Choose Payment Account"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="94dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="400dp"
        android:layout_height="70dp"
        app:cardBackgroundColor="#dddddd"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="259dp" >

        <TextView
            android:id="@+id/textName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:translationX="15"
            android:translationY="10" />

        <TextView
            android:id="@+id/textAccountNo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AccountNumber"
            android:translationX="110"
            android:translationY="10" />

        <TextView
            android:id="@+id/textSortCode2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SortCode"
            android:translationX="280"
            android:translationY="10" />

        <Button
            android:id="@+id/btnSelect2"
            android:layout_width="75"
            android:layout_height="35"
            android:text="Select"
            android:textSize="10sp"
            android:translationX="10"
            android:translationY="35"
            app:backgroundTint="#6d0095" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>