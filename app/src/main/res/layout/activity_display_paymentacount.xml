<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView6"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:translationX="0dp"
        android:translationY="0dp"
        app:cardBackgroundColor="#6d0095"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textPaymentAct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:fontFamily="@font/roboto_medium"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            android:translationX="10dp"
            android:translationY="10dp"
            tools:text="Payment Account" />

        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="71dp"
            android:layout_height="65dp"
            android:translationX="325dp"
            android:translationY="5dp"
            app:srcCompat="@drawable/teamlogo" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="31dp"
        android:translationX="0dp"
        android:translationY="0dp"
        app:cardBackgroundColor="#DDDDDD"
        app:layout_constraintBottom_toTopOf="@+id/cardView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textChoosePaymentAct">

        <TextView
            android:id="@+id/textName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationX="15dp"
            android:translationY="10dp"
            tools:text="Name" />

        <TextView
            android:id="@+id/textAccountNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationX="110dp"
            android:translationY="10dp"
            tools:text="AccountNumber" />

        <TextView
            android:id="@+id/textSortCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationX="280dp"
            android:translationY="10dp"
            tools:text="SortCode" />

        <Button
            android:id="@+id/btnSelect"
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:textSize="10sp"
            android:translationX="10dp"
            android:translationY="35dp"
            app:backgroundTint="#6d0095"
            tools:text="Select" />

    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/textChoosePaymentAct"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="14sp"
        android:translationX="0dp"
        android:translationY="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView6"
        tools:text="Choose Payment Account" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        app:cardBackgroundColor="#dddddd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView5">

        <TextView
            android:id="@+id/textName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationX="15dp"
            android:translationY="10dp"
            tools:text="Name" />

        <TextView
            android:id="@+id/textAccountNo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationX="110dp"
            android:translationY="10dp"
            tools:text="AccountNumber" />

        <TextView
            android:id="@+id/textSortCode2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationX="280dp"
            android:translationY="10dp"
            tools:text="SortCode" />

        <Button
            android:id="@+id/btnSelect2"
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:textSize="10sp"
            android:translationX="10dp"
            android:translationY="35dp"
            app:backgroundTint="#6d0095"
            tools:text="Select" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>